{
    "title": "Parameters",
    "type": "object",
    "required": [
      "url",
      "#token",
      "objects"
    ],
    "properties": {
      "url": {
        "title": "API url",
        "type": "string",
        "description": "URL for API calls.",
        "minLength": 0,
        "default": "https://api2.ecomailapp.cz/",
        "propertyOrder": 1
      },
      "#token": {
        "type": "string",
        "format": "password",
        "title": "Token",
        "description": "Token for API calls.",
        "minLength": 1,
        "default": "",
        "propertyOrder": 2
      },
      "objects": {
        "type": "array",
        "format": "table",
        "title": "Endpoint objects",
        "uniqueItems": true,
        "propertyOrder": 3,
        "items": {
          "type": "object",
          "title": "Object",
          "properties": {
            "endpoint": {
              "type": "string",
              "title": "Endpoint",
              "propertyOrder": 1,
              "description": "Endpoint for API call."
            },
            "destination" : {
              "type": "string",
              "title": "Destination table",
              "default": "",
              "propertyOrder": 2,
              "description": "Table destination in storage. If left blank, tables will be downloaded to in.c-looker.looker_data_xx, where xx is the ID of look."
            },
            "incremental" : {
              "type": "boolean",
              "enum": [
                false,
                true
              ],
              "propertyOrder": 3,
              "default": false,
              "title": "Incremental load",
              "description": "Marks, whether table should be loaded incrementally into storage."
            },
            "pk": {
              "type": "string",
              "title": "Primary key",
              "description": "Comma separated column names to be used as primary keys.",
              "propertyOrder": 4
            },
            "inconsistent": {
              "type": "boolean",
              "enum": [
                false,
                true
              ],
              "propertyOrder": 5,
              "default": true,
              "title": "Inconsisten json",
              "description": "Marks, whether json is inconsistent."
            }
          }
        }
      }
    }
  }